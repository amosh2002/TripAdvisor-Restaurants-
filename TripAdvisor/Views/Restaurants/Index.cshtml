@*@model IEnumerable<TripAdvisor.Models.Restaurant>*@
@model TripAdvisor.Models.RatingViewModel

@{
    ViewData["Title"] = "Index";
}

<head>

</head>

<body>
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <form asp-controller="Restaurants" asp-action="Index" method="get">
        <p>
            <select asp-for="RestaurantRating" asp-items="Model.Ratings">
                <option value="">All</option>
            </select>
            Title: <input type="text" name="SearchString">
            <input type="submit" value="Filter" />
        </p>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Restaurants[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Restaurants[0].Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Restaurants[0].Rating)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Restaurants)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>

                    @{
                        switch (item.Rating)
                        {
                            case 5:
                                <td>
                                    <p style=" height:0;"><span class="stars" style="-webkit-text-fill-color: gold; font-size:19px;">★★★★★</span> </p>
                                </td>
                                break;

                            case 4:
                                <td>
                                    <p style=" height:0;"><span class="stars" style="-webkit-text-fill-color: gold; font-size:19px;">★★★★</span> </p>
                                </td>
                                break;

                            case 3:
                                <td>
                                    <p style=" height:0;"><span class="stars" style="-webkit-text-fill-color: gold; font-size:19px;">★★★</span> </p>
                                </td>
                                break;

                            case 2:
                                <td>
                                    <p style=" height:0;"><span class="stars" style="-webkit-text-fill-color: gold; font-size:19px;">★★</span> </p>
                                </td>
                                break;

                            case 1:
                                <td>
                                    <p style=" height:0;"><span class="stars" style="-webkit-text-fill-color: gold; font-size:19px;">★</span> </p>
                                </td>
                                break;
                        }
                    }


                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>




